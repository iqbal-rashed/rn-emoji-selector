{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist",
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/index.tsx", "src/data/index.ts"],
  "exclude": ["node_modules"]
}
